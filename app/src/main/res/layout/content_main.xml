<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.shubham.roommatebudget.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#9E9E9E">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textColor="#000000"
        android:textSize="25dp"
        android:id="@+id/textView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_marginTop="30dp"
        android:layout_alignLeft="@+id/item2nd"
        android:id="@+id/roommate" />
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/item1st"
        android:hint="Item"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/cost1st"
        android:hint="Cost"
        android:inputType="number"
        android:layout_below="@+id/item1st"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/item2nd"
        android:hint="Item"
        android:inputType="text"
        android:layout_alignBottom="@+id/item1st"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/cost2nd"
        android:hint="Cost"
        android:inputType="number"
        android:layout_below="@id/item2nd"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"/>

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/add"
        android:id="@+id/person1"
        android:layout_below="@id/cost1st"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/add"
        android:id="@+id/person2"
        android:layout_marginRight="30dp"
        android:layout_alignTop="@+id/person1"
        android:layout_alignRight="@+id/cost2nd"
        android:layout_alignEnd="@+id/cost2nd" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/log"
        android:id="@+id/button"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/person1"
        android:layout_alignLeft="@+id/person1"
        android:layout_alignStart="@+id/person1" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/log"
        android:id="@+id/button2"
        android:layout_alignBottom="@+id/button"
        android:layout_alignLeft="@+id/person2"
        android:layout_alignStart="@+id/person2" />
    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/imageButton"
        android:background="@drawable/circulartotal"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:elevation="4dp"
        />

</RelativeLayout>
    </ScrollView>


</RelativeLayout>
